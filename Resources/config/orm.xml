<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_text.text_meta_class">%tadcka_text.text_class%Metadata</parameter>
        <parameter key="tadcka_text.text_translation_meta_class">%tadcka_text.text_translation_class%Metadata</parameter>

        <parameter key="tadcka_text.manager.text_translation.default.class">Tadcka\TextBundle\Entity\Manager\TextTranslationManager</parameter>
    </parameters>

    <services>
        <service id="tadcka_text.manager.text_translation.default" class="%tadcka_text.manager.text_translation.default.class%" public="false">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tadcka_text.text_translation_class%</argument>
            <argument>%tadcka_text.text_translation_meta_class%</argument>
        </service>
    </services>

</container>
