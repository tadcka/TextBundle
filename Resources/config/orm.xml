<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tadcka_text.model.text.class">Tadcka\TextBundle\Entity\Text</parameter>
        <parameter key="tadcka_text.model.text_translation.class">Tadcka\TextBundle\Entity\TextTranslation</parameter>

        <parameter key="tadcka_text.manager.text.default.class">Tadcka\TextBundle\Entity\Repository\TextRepository</parameter>
    </parameters>

    <services>
        <service id="tadcka_text.manager.text.default" class="%tadcka_text.manager.text.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%tadcka_text.model.text.class%</argument>
        </service>
    </services>

</container>